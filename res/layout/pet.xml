<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/petlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >
    <!-- 后退 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="80">
        <Button 
            android:id="@+id/petOnbackPressed"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="40"></LinearLayout>
    <!-- 欣赏和发布的button -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="70">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="30"></LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="330">
            <Button 
                android:id="@+id/petEnjoy"
                android:background="@drawable/pet_enjoy_pressed"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="330">
            <Button 
                android:id="@+id/petShare"
                android:background="@drawable/pet_share"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="30"></LinearLayout>
    </LinearLayout>
    <!-- tabhost -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="990">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="60"></LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="600">
            <TabHost 
        		android:layout_width="match_parent"
        		android:layout_height="fill_parent"
        		android:id="@+id/petTabHost">
        		<LinearLayout 
            		android:layout_height="match_parent"
            		android:layout_width="match_parent"
            		android:orientation="vertical">
            		<TabWidget android:id="@android:id/tabs"  
           			 	android:layout_width="match_parent"  
            			android:layout_height="0dip" 
            			android:layout_weight="0"/>   
        <FrameLayout android:id="@android:id/tabcontent"  
            android:layout_width="match_parent"  
            android:layout_height="match_parent">
            
            <com.example.wu1.XListView 
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:id="@+id/petScroll"></com.example.wu1.XListView>
    
			<LinearLayout 
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:orientation="vertical"
	    		android:id="@+id/petLinear">
	    		<LinearLayout 
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="0dip"
	    		    android:layout_weight="40"></LinearLayout>
	  			<LinearLayout 
	      			android:layout_width="fill_parent"
	      			android:layout_height="0dip"
	      			android:layout_weight="80">
	      			<LinearLayout 
	          			android:layout_width="0dip"
	          			android:layout_height="fill_parent"
	          			android:layout_weight="1">
	           		<Button   
       			 		android:id="@+id/b01"  
      			 		android:layout_width="fill_parent"   
       			 		android:layout_height="fill_parent"
       			 		android:background="@drawable/pet_chooseimage"/>  
	      			</LinearLayout>
	      			<LinearLayout 
	          			android:layout_width="0dip"
	          			android:layout_height="fill_parent"
	          			android:layout_weight="1">
	          			<Button   
       			 			android:id="@+id/b02"  
      			 			android:layout_width="fill_parent"   
       			 			android:layout_height="fill_parent"
       			 			android:background="@drawable/pet_takephoto"/>  
	      			</LinearLayout>
	  			</LinearLayout>
    			<ImageView  
        			android:id="@+id/iv01"  
        			android:layout_width="fill_parent"   
        			android:layout_height="0dip"
        			android:layout_weight="450"/> 
       <!-- petname -->
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dip"
         android:layout_weight="70">
         <LinearLayout 
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="50"></LinearLayout>
         <LinearLayout 
             android:id="@+id/petNameLinearLayout"
             android:orientation="horizontal"
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:background="@drawable/pet_petname"
             android:layout_weight="500">
	         <EditText 
                 android:id="@+id/petUploadName"
                 android:layout_width="0dip"
                 android:layout_weight="3"
                 android:layout_height="fill_parent"/>
             <LinearLayout 
                 android:layout_width="0dip"
                 android:layout_height="fill_parent"
                 android:layout_weight="2"></LinearLayout>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="50"></LinearLayout>
     </LinearLayout>
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dip"
         android:layout_weight="30"></LinearLayout>
     <!-- petvariety -->
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dip"
         android:layout_weight="70">
         <LinearLayout 
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="50"></LinearLayout>
         <LinearLayout 
             android:id="@+id/petVarietyLinearLayout"
             android:orientation="horizontal"
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:background="@drawable/pet_petvariety"
             android:layout_weight="500">
	         <EditText 
                 android:id="@+id/petUploadVariety"
                 android:layout_width="0dip"
                 android:layout_weight="3"
                 android:layout_height="fill_parent"/>
             <LinearLayout 
                 android:layout_width="0dip"
                 android:layout_height="fill_parent"
                 android:layout_weight="2"></LinearLayout>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="50"></LinearLayout>
     </LinearLayout>
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dip"
         android:layout_weight="60"></LinearLayout>
     <!-- upload -->
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dip"
         android:orientation="horizontal"
         android:layout_weight="40">
         <LinearLayout 
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="440">
             <ProgressBar 
                 android:id="@+id/petProgressBar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="65"
             android:orientation="horizontal">
             <Button 
          	android:id="@+id/petUpload"
          	android:background="@drawable/pet_upload"
          	android:layout_width="fill_parent"
          	android:layout_height="fill_parent"></Button>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="45"></LinearLayout>
     </LinearLayout>
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="0dip"
         android:layout_weight="50"></LinearLayout>
      
   	</LinearLayout>
        </FrameLayout>
        </LinearLayout>
        
        
    </TabHost>
	
        </LinearLayout>
    <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="60"></LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="100"></LinearLayout>
    
</LinearLayout>
