<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
<LinearLayout 
    android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      
    >
    <TextView 
        android:id="@+id/bbmrecord_type"
        android:layout_gravity="left"
       
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型"/>
    <TextView 
        android:layout_gravity="left"
        android:gravity="center"
       
        android:id="@+id/bbmrecord_content"
        android:text="我需要一个土豆，一个黄阁，一件内裤，套在头上，哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView 
        android:layout_gravity="left"
        android:visibility="gone"
        android:gravity="center"
   
        android:src="@drawable/voicesend"
        android:id="@+id/bbmrecord_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
     <TextView
         android:layout_gravity="left"
        android:gravity="center" 
      
        android:id="@+id/bbmrecord_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111111"
        
        />
</LinearLayout>
</RelativeLayout>
