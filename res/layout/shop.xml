         android:layout_y="30dp"/>
   <Button
         android:id="@+id/bian"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="20dp"
         android:layout_y="60dp"
         android:text="变"/>
    </AbsoluteLayout>
