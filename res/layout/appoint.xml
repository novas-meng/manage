<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:orientation="horizontal"
	    android:layout_weight="1">
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="预约"
	        android:gravity="center"></TextView>
	   	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"></LinearLayout>
<!-- 1 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:orientation="horizontal"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="物业费"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="宽带通信费"/>
	    </LinearLayout>
	</LinearLayout>
<!-- 2 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:orientation="horizontal"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="车位费"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="电梯费"/>
	    </LinearLayout>
	</LinearLayout>
	<!-- 3 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:orientation="horizontal"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="供暖费"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="燃气费"/>
	    </LinearLayout>
	</LinearLayout>
	<!-- 4 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:orientation="horizontal"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="电费"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="水费"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
