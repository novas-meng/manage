<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout 
        android:id="@+id/yy_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
       <TextView 
      android:id="@+id/yy_yezhu_guanjia_text"
      android:text="亲爱的***先生"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
   <TextView 
      android:id="@+id/yy_yezhu_text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
     <LinearLayout 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
         
      <EditText
      android:id="@+id/yy_yezhu_edittext1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       />
    <TextView 
      android:text="月"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
      <EditText 
         android:id="@+id/yy_yezhu_edittext2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      
       />
    <TextView 
      android:text="日"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
      <EditText 
         android:id="@+id/yy_yezhu_edittext3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      
       />
    <TextView 
      android:text="时"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
      <TextView 
      android:id="@+id/yy_yezhu_text2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
     android:text="收取"
      />   
        <EditText 
         android:id="@+id/yy_yezhu_edittext4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      
       />
    <TextView 
      android:text="年度"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
        
     </LinearLayout>
    </LinearLayout>
    
          <Spinner 
     android:id="@+id/yy_yezhu_charge"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />
          
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"    
       >
      <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       />
       <Button 
    android:id="@+id/yy_send"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:onClick="sendYYMessage"
    android:background="@drawable/yy_send"
    android:layout_weight="1"
    />
         <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       />
         <Button
        android:id="@+id/yy_del"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
        android:background="@drawable/yy_del"
        android:layout_weight="1"
        android:onClick="delInformation"
         />
           <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       />
   </LinearLayout>

        
    </LinearLayout>
    
</RelativeLayout>
