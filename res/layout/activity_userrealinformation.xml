<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yy_background"
    android:orientation="vertical" >
   <RelativeLayout 
        android:id="@+id/bbm_title_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:background="@drawable/bbm_title_background"
		android:orientation="horizontal"  >		
			<Button
	            android:id="@+id/userinfo_ret_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bbm_title_arrow"
	            
		    />    
  	    <Button 
			    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:background="@drawable/userinfo"
        		android:layout_toRightOf="@+id/userinfo_ret_button"
        		
				/>
		</RelativeLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="15dip"
	    ></LinearLayout>
    <TextView 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/userinfowenzi"
        />
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="15dip"
	    ></LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_marginLeft="50dip"
    android:layout_marginRight="50dip"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/userinfo_edit_back"
    >
  <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dip"
      android:layout_gravity="center_vertical"
      android:background="@drawable/realname"
      />
<EditText 
    android:id="@+id/real_name_edit"
     android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:background="@null"
      android:hint="请输入你的真实姓名"
    />
</LinearLayout>
<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="15dip"
	    ></LinearLayout>
<RadioGroup 
        android:id="@+id/real_choose"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton 
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:id="@+id/real_choose_owner"
            android:checked="true"
            android:text="房主"/>
        <RadioButton 
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:id="@+id/real_choose_renter"
            android:text="租户"/>
        
    </RadioGroup>
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="15dip"
	    ></LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/userinfo_edit_back"
    >
   <TextView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5dip"
       android:layout_gravity="center_vertical"
       android:background="@drawable/userinfo_dizhi"
       android:layout_weight="1"
       /> 
     <EditText 
       android:id="@+id/real_dong"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@null"
               android:gravity="center_horizontal"
       
              android:layout_gravity="center_vertical"
              android:layout_weight="1"
       
         />
    <TextView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       
       android:background="@drawable/userinfo_dong"
              android:layout_weight="1"
       
       />
       <EditText 
        android:id="@+id/real_danyuan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
                android:gravity="center_horizontal"
        
              android:layout_gravity="center_vertical"
                     android:layout_weight="1"
              
       
         />
    <TextView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:background="@drawable/userinfo_danyuan"
              android:layout_weight="1"
       
       />
       <EditText 
        android:id="@+id/real_shi"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
               android:layout_weight="1"
        
         />
     <TextView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:layout_marginRight="5dip"
       android:background="@drawable/userinfo_shi"
              android:layout_weight="1"
       
       />
</LinearLayout>
<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="15dip"
	    ></LinearLayout>
<Button 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/real_confirm"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/userinfo_confirm"
    />
</LinearLayout>
