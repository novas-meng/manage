<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.wy1.MainActivity">
    <LinearLayout 
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0px" 
    android:background="@drawable/bar_bg"
    >
 
        <TextView
           android:layout_weight="1"
           android:layout_width="0px"
           android:layout_height="fill_parent"
           android:id="@+id/community"
           android:gravity="center"
           android:text="文景花园"
           android:textColor="#ff0000"
           android:textSize="20sp" />
       <TextView
           android:id="@+id/EB"
           android:layout_weight="1"
           android:layout_width="0px"
           android:layout_height="fill_parent"
           
           android:gravity="center"
           android:text="您的E币：888"
           android:textColor="#ff0000"
           android:textSize="20sp" />

      

    </LinearLayout>
<LinearLayout 
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="0px"
    android:layout_weight="3"
    android:background="@drawable/top_bg"
    >
    <TextView
        android:text="商家详情"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#FF0000"
       android:textSize="25sp"
       android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="fill_parent"
    />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="27">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      
        >
    <LinearLayout
    
    android:layout_width="fill_parent"
    android:layout_height="0px"
    android:orientation="vertical"
    android:background="@drawable/mid_bg"
    android:layout_margin="1dip"
    >
    <TextView
        android:id="@+id/aroundinfo_name"
        android:layout_margin="10dp"
        android:text="天上人间夜总会"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="27sp"/>
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="0px"
       android:orientation="vertical"
       android:layout_weight="3">
    
    <TextView
        android:id="@+id/aroundinfo_pername"
        android:text="负责人姓名:"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/aroundinfo_address"
        android:text="地址"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"/>
   <TextView
       android:id="@+id/aroundinfo_phone"
        android:text="电话"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"/>
   <TextView
       android:id="@+id/aroundinfo_word"
        android:text="商家消息:"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"/>
   </LinearLayout>
   <ImageView
       android:id="@+id/aroundinfo_image1"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_margin="5dp"
       android:layout_gravity="center_horizontal"/>
   <ImageView
       android:id="@+id/aroundinfo_image2"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
      
       android:layout_margin="5dp"
  
       android:layout_gravity="center_horizontal"/>
   <ImageView
       android:id="@+id/aroundinfo_image3"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       
       android:layout_margin="5dp"
     
       android:layout_gravity="center_horizontal"/>
   <ImageView
       android:id="@+id/aroundinfo_image4"
       
       android:layout_margin="5dp"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"/>
    
    </LinearLayout>
        </ScrollView>
        </LinearLayout>
    </LinearLayout>