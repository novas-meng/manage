<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <TextView 
     android:id="@+id/yy_guanjia_yezhuname"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />
 <TextView 
     android:id="@+id/yy_guanjia_content"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />

   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       
       >
        <Button 
     android:id="@+id/yy_guanjia_response"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="回复"
android:onClick="OnResponse"  
 android:background="@drawable/buttonpressed"
    android:layout_weight="1"   />
         <Button
        android:id="@+id/yy_del"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
        android:background="@drawable/yy_del"
        android:layout_weight="1"
        android:onClick="delInformation"
         />
   </LinearLayout>
</LinearLayout>
