<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
   <View
           android:layout_width="fill_parent"
           android:layout_height="0px"
           android:layout_weight="0.5"/>
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="0px"
       android:orientation="horizontal"
       android:layout_weight="3">
       <View
           android:layout_width="0px"
           android:layout_height="fill_parent"
           android:layout_weight="1"/>
   <LinearLayout
       android:id="@+id/yy_table"
       android:layout_width="0px"
       android:layout_height="fill_parent"
       android:orientation="vertical"
       android:background="@drawable/yy_table"
       android:layout_weight="12">
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0px"
          android:orientation="horizontal"
          android:layout_weight="1">
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="5"/>
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="1.4"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
           <EditText
               android:background="@null"
               android:id="@+id/yy_month"
               android:layout_width="fill_parent"
               android:layout_gravity="center"
               android:textSize="15sp"
               android:layout_height="0px"
               android:layout_weight="1"/>
            <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
             <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="0.6"/>
             <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="0.6"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
               <EditText
               android:id="@+id/yy_day"
               android:layout_width="fill_parent"
               android:textSize="15sp"
               android:background="@null"
               android:layout_gravity="center"
               android:layout_height="0px"
               android:layout_weight="1"/>  
               <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
                <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="2.4"/>
       </LinearLayout>
       <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0px"
          android:orientation="horizontal"
          android:layout_weight="1">
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="6"/>
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="2.2"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
               <EditText
               android:id="@+id/yy_num"
               android:layout_width="fill_parent"
               android:textSize="15sp"
               android:background="@null"
               android:layout_gravity="center"
               android:layout_height="0px"
               android:layout_weight="1"/>  
               <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="3.8"/>
       </LinearLayout>
       <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0px"
          android:orientation="horizontal"
          android:layout_weight="1">
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="6"/>
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="5"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
               <EditText
               android:id="@+id/yy_carcard"
               android:layout_width="fill_parent"
               android:textSize="15sp"
               android:background="@null"
               android:layout_gravity="center"
               android:layout_height="0px"
               android:layout_weight="1"/>  
               <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="1"/>
       </LinearLayout>
   </LinearLayout>
    <View
           android:layout_width="0px"
           android:layout_height="fill_parent"
           android:layout_weight="1"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="0px"
       android:orientation="horizontal"
       android:layout_weight="1">
    <View
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/creatpasscard"
        android:layout_weight="12"
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:src="@drawable/yy_gtpd"/>
    <View
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>"
    </LinearLayout>
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="0px"
       android:orientation="horizontal"
       android:layout_weight="4">
       <View
           android:layout_width="0px"
           android:layout_height="fill_parent"
           android:layout_weight="1"/>
   <LinearLayout
       android:id="@+id/yypasscard"
       android:layout_width="0px"
       android:layout_height="fill_parent"
       android:orientation="vertical"
       android:visibility="invisible"
       android:background="@drawable/yy_table"
       android:layout_weight="12">
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0px"
          android:orientation="horizontal"
          android:layout_weight="1">
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="5"/>
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="1.4"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
           <EditText
               android:background="@null"
               android:id="@+id/yy_month_view"
               android:layout_width="fill_parent"
               android:layout_gravity="center"
               android:textSize="15sp"
               android:layout_height="0px"
               android:layout_weight="1"/>
            <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
             <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="0.6"/>
             <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="0.6"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
               <EditText
               android:id="@+id/yy_day_view"
               android:layout_width="fill_parent"
               android:textSize="15sp"
               android:background="@null"
               android:layout_gravity="center"
               android:layout_height="0px"
               android:layout_weight="1"/>  
               <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
                <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="2.4"/>
       </LinearLayout>
       <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0px"
          android:orientation="horizontal"
          android:layout_weight="1">
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="6"/>
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="2.2"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
               <EditText
               android:id="@+id/yy_num_view"
               android:layout_width="fill_parent"
               android:textSize="15sp"
               android:background="@null"
               android:layout_gravity="center"
               android:layout_height="0px"
               android:layout_weight="1"/>  
               <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="3.8"/>
       </LinearLayout>
       <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="0px"
          android:orientation="horizontal"
          android:layout_weight="1">
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="6"/>
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="5"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="0px"
                  android:layout_weight="0.7"/>
               <EditText
               android:id="@+id/yy_carcard_view"
               android:layout_width="fill_parent"
               android:textSize="15sp"
               android:background="@null"
               android:layout_gravity="center"
               android:layout_height="0px"
               android:layout_weight="1"/>  
               <View
              android:background="#000000"
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.02dp"
                  android:layout_weight="0.02"/>
           <View
              
               android:layout_gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="0.2dp"
                  android:layout_weight="0.4"/>
           </LinearLayout>
          <View
              android:layout_width="0px"
              android:layout_height="fill_parent"
              android:layout_weight="1"/>
       </LinearLayout>
   </LinearLayout>
   <ImageView
       android:id="@+id/yy_img"
       android:visibility="gone"
       android:layout_weight="12"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"/>
    <View
           android:layout_width="0px"
           android:layout_height="fill_parent"
           android:layout_weight="1"/>
   </LinearLayout>
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="0px"
          android:orientation="horizontal"
          android:layout_weight="1">
    <View
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="fill_parent"></View>
          <ImageView
              android:id="@+id/yy_share"
              android:scaleType="fitCenter"
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:src="@drawable/yy_share"/>
           <View
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="fill_parent"></View>
      </LinearLayout>
    </LinearLayout>
   