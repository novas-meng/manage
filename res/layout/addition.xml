<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="为了更准确受理你的预约，实现上门收费，请先完善住户资料，到物业认证，成为加V会员！谢谢！"/>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView 
                android:text="真实姓名"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <EditText 
                android:id="@+id/realName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"></LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:layout_weight="1">
	        <LinearLayout 
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="1">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="租住"
	                android:layout_gravity="center_vertical"/>
	            <CheckBox 
	                android:id="@+id/houseRenter"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="1">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="房主"
	                android:layout_gravity="center_vertical"/>
	            <CheckBox 
	                android:id="@+id/houseOwner"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"></LinearLayout>
	    </LinearLayout>
	</LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="地址"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Spinner 
                android:id="@+id/addDong"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
            <Spinner 
                android:id="@+id/addDanyuan"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
            <Spinner 
                android:id="@+id/addShi"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"/>
        </LinearLayout>
    </LinearLayout>
     
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <TextView 
            android:id="@+id/addConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"/>
    </LinearLayout>
     
</LinearLayout>
